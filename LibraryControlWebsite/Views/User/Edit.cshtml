@model LibaryControlWebsite.Models.User

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chỉnh sửa thông tin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            background: linear-gradient(to right, #4A90E2, #7B92DC);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .edit-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 400px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .edit-container:hover {
            transform: translateY(-5px);
            box-shadow: 0px 15px 40px rgba(0, 0, 0, 0.3);
        }

        .form-label {
            font-weight: bold;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="edit-container">
        <h2 class="text-center"><i class="fas fa-edit"></i> Chỉnh sửa thông tin</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label class="form-label">Họ và Tên</label>
                <input asp-for="FullName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success w-100">Lưu thay đổi</button>
        </form>
    </div>
</body>
</html>
