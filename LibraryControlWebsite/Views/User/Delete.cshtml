@model LibaryControlWebsite.Models.User

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Xóa Tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            background: linear-gradient(to right, #e53935, #d32f2f);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .delete-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 350px;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="delete-container">
    <h2 class="text-danger"><i class="fas fa-trash-alt"></i> Xóa Tài khoản</h2>
    <p>ID: @Model.UserId</p>
    <p>Họ và Tên: @Model.FullName</p>
    <p>Email: @Model.Email</p>

    <form asp-action="DeleteConfirmed" method="post">
        <button type="submit" class="btn btn-danger w-100">Xóa</button>
        <a href="@Url.Action("UserMenu", "User")" class="btn btn-secondary w-100 mt-2">Hủy</a>
    </form>
</div>
</body>
</html>