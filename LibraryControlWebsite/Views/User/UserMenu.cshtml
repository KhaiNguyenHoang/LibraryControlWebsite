@model LibaryControlWebsite.Models.User

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Thông tin Tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            background: linear-gradient(to right, #4A90E2, #7B92DC);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .profile-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 450px;
            transition: transform 0.3s, box-shadow 0.3s;
            text-align: center;
        }

        .profile-container:hover {
            transform: translateY(-5px);
            box-shadow: 0px 15px 40px rgba(0, 0, 0, 0.3);
        }

        .profile-container h2 {
            color: #333;
            font-weight: bold;
        }

        .profile-container p {
            font-size: 18px;
            color: #555;
        }

        .btn-custom {
            width: 100%;
            border-radius: 10px;
            padding: 12px;
            font-size: 16px;
            font-weight: bold;
            transition: transform 0.2s, box-shadow 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .btn-custom i {
            font-size: 18px;
        }

        .btn-custom:hover {
            transform: scale(1.05);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-warning {
            background: linear-gradient(to right, #FFB74D, #FF9800);
            border: none;
            color: white;
        }

        .btn-warning:hover {
            background: linear-gradient(to right, #FFA726, #F57C00);
        }

        .btn-secondary {
            background: linear-gradient(to right, #B0BEC5, #78909C);
            border: none;
            color: white;
        }

        .btn-secondary:hover {
            background: linear-gradient(to right, #90A4AE, #607D8B);
        }

        .btn-danger {
            background: linear-gradient(to right, #E57373, #D32F2F);
            border: none;
            color: white;
        }

        .btn-danger:hover {
            background: linear-gradient(to right, #EF5350, #C62828);
        }

        .btn-dark {
            background: linear-gradient(to right, #546E7A, #37474F);
            border: none;
            color: white;
        }

        .btn-dark:hover {
            background: linear-gradient(to right, #455A64, #263238);
        }
    </style>
</head>
<body>
    <div class="profile-container">
        <h2><i class="fas fa-user-circle"></i> Thông tin Tài khoản</h2>
        <p><strong>Họ và Tên:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Số điện thoại:</strong> @Model.Phone</p>
        <p><strong>Địa chỉ:</strong> @Model.Address</p>

        <a href="@Url.Action("Edit", "User")" class="btn btn-warning btn-custom mt-3">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>

        <a href="@Url.Action("ChangePassword", "User")" class="btn btn-secondary btn-custom mt-3">
            <i class="fas fa-key"></i> Đổi mật khẩu
        </a>

        <a href="@Url.Action("Delete", "User")" class="btn btn-danger btn-custom mt-3">
            <i class="fas fa-trash-alt"></i> Xóa tài khoản
        </a>

        <a href="@Url.Action("Logout", "Auth")" class="btn btn-dark btn-custom mt-3">
            <i class="fas fa-sign-out-alt"></i> Đăng xuất
        </a>
    </div>
</body>
</html>
