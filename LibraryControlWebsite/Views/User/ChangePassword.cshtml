@model dynamic

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đổi Mật Khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .password-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 350px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .password-container:hover {
            transform: translateY(-5px);
            box-shadow: 0px 15px 40px rgba(0, 0, 0, 0.3);
        }

        .form-label {
            font-weight: bold;
            color: #555;
        }

        .error-message {
            color: red;
            font-size: 14px;
            display: none;
        }
    </style>
</head>
<body>
    <div class="password-container">
        <h2 class="text-center"><i class="fas fa-key"></i> Đổi Mật Khẩu</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-action="ChangePassword" onsubmit="return validatePassword()">
            <div class="mb-3">
                <label class="form-label">Mật khẩu mới</label>
                <input type="password" name="newPassword" class="form-control" id="newPassword" required />
                <span id="passwordError" class="error-message">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, số, ký tự đặc biệt.</span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
        </form>
    </div>
</body>
</html>
